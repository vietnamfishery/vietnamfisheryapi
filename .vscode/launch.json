{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests API",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["-r", "ts-node/register", "${workspaceRoot}/src/index.ts"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Run Dev API",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceRoot}/src/index.ts"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
{
    "name": "vietnam-fishery-api",
    "version": "1.0.0",
    "description": "a seed project for creating http service using express written in typescript",
    "main": "./src/index.js",
    "scripts": {
        "test": "jest --forceExit",
        "start": "npm run server:dev",
        "server:dev": "node ./dist/index",
        "dev": "set NODE_ENV=development && nodemon --exec ts-node ./src/index.ts",
        "debug:dev": "ts-node ./src/index.ts",
        "prod": "set NODE_ENV=production && nodemon --exec ts-node ./src/index.ts",
        "build": "npm run build:dev",
        "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached && npm run copy-files",
        "postinstall": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --profile --color --display-error-details --display-cached --bail && npm run copy-files",
        "copy-files": "node copyFiles.js",
        "clean": "npm cache clear && rimraf --dist"
    },
    "keywords": [],
    "author": "Nguyen Viet Huan & Vo Hoai Phong",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.5.1",
        "body-parser": "^1.18.2",
        "compression": "^1.7.2",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "del": "^3.0.0",
        "errorhandler": "^1.5.0",
        "express": "^4.16.3",
        "express-session": "^1.15.6",
        "express-status-monitor": "^1.0.1",
        "helmet": "^3.12.0",
        "http-errors": "^1.6.3",
        "http-status-codes": "^1.3.0",
        "lodash": "^4.17.10",
        "lokijs": "^1.5.3",
        "method-override": "^2.3.10",
        "moment": "^2.22.2",
        "moment-timezone": "^0.5.21",
        "morgan": "^1.9.0",
        "mssql": "^4.1.0",
        "multer": "^1.3.0",
        "mysql": "^2.15.0",
        "mysql2": "^1.5.3",
        "requestretry": "^1.13.0",
        "rxjs": "^6.0.0",
        "sequelize": "^4.38.0",
        "socket.io": "^2.1.1",
        "socket.io-redis": "^5.2.0",
        "ssh2": "^0.6.1",
        "uuid": "^3.3.2",
        "wicket": "^1.3.3",
        "winston": "^2.4.2"
    },
    "devDependencies": {
        "@reactivex/rxjs": "^6.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "1.17.0",
        "@types/chai": "^4.1.3",
        "@types/compression": "^0.0.36",
        "@types/cookie-parser": "^1.4.1",
        "@types/cors": "^2.8.4",
        "@types/debug": "0.0.30",
        "@types/del": "^3.0.1",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.11.1",
        "@types/express-serve-static-core": "^4.16.0",
        "@types/express-session": "^1.15.8",
        "@types/helmet": "^0.0.37",
        "@types/http-errors": "^1.6.1",
        "@types/jest": "^22.2.3",
        "@types/lodash": "^4.14.108",
        "@types/lokijs": "^1.5.2",
        "@types/method-override": "^0.0.31",
        "@types/mocha": "^5.2.0",
        "@types/moment-timezone": "^0.5.9",
        "@types/morgan": "^1.7.35",
        "@types/mssql": "^4.0.7",
        "@types/multer": "^1.3.6",
        "@types/mysql2": "github:types/mysql2",
        "@types/node": "^9.6.6",
        "@types/requestretry": "^1.12.3",
        "@types/sequelize": "^4.27.24",
        "@types/socket.io": "^1.4.34",
        "@types/socket.io-redis": "^1.0.25",
        "@types/ssh2": "^0.5.35",
        "@types/supertest": "^2.0.4",
        "@types/uuid": "^3.4.4",
        "@types/webpack": "^4.1.4",
        "@types/winston": "^2.3.9",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-es2017": "^6.24.1",
        "chai": "^4.1.2",
        "cross-env": "^5.1.6",
        "debug": "^3.1.0",
        "jest": "^22.4.3",
        "mocha": "^5.2.0",
        "nodemon": "^1.17.3",
        "shelljs": "^0.8.1",
        "supertest": "^3.0.0",
        "ts-jest": "^22.4.4",
        "ts-loader": "^4.2.0",
        "ts-node": "^6.0.0",
        "tslint": "^5.10.0",
        "tslint-config-standard": "^7.0.0",
        "typescript": "^2.8.3",
        "uglifyjs-webpack-plugin": "^1.2.5",
        "webpack": "^4.6.0",
        "webpack-cli": "^2.0.15"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "transform": {
            "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
        },
        "testMatch": [
            "**/src/**/*.spec.(ts|js)"
        ],
        "testEnvironment": "node"
    }
}
